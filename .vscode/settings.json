{
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.renderWhitespace": "boundary",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.folding": true,
  "editor.foldingStrategy": "auto",
  "editor.foldingImportsByDefault": true,
  "files.insertFinalNewline": true,
  "files.autoSave": "onFocusChange",
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "quickCommandButtons.buttons": [
    {
      "name": "$(git-merge) Git",
      "shortcut": "g",
      "color": "green",
      "group": [
        {
          "name": "Push",
          "command": "git add . && git commit --amend --no-edit && git push -f",
          "terminalName": "Forced Push",
          "shortcut": "p"
        },
        {
          "name": "Pull",
          "command": "git pull",
          "terminalName": "Pull",
          "shortcut": "l"
        },
        {
          "name": "Commit",
          "command": "git add . && git commit --amend --no-edit",
          "terminalName": "Add and Commit Amend",
          "shortcut": "c"
        },
        {
          "name": "Reset Soft",
          "command": "git reset --soft HEAD~1",
          "terminalName": "Reset Soft",
          "shortcut": "r"
        },
        {
          "name": "Rebase 5",
          "command": "git rebase -i HEAD~5",
          "terminalName": "Rebase Interactive 5",
          "shortcut": "b"
        },
        {
          "name": "Checkout main",
          "command": "git checkout main",
          "terminalName": "Checkout main",
          "shortcut": "m"
        }
      ]
    },
    {
      "name": "$(browser) Web App",
      "color": "skyblue",
      "shortcut": "w",
      "group": [
        {
          "name": "Run App",
          "executeAll": true,
          "group": [
            {
              "name": "Backend",
              "command": "just run backend",
              "terminalName": "Backend"
            },
            {
              "name": "Frontend",
              "command": "just run frontend",
              "terminalName": "Frontend"
            }
          ],
          "shortcut": "a"
        },
        {
          "name": "Backend",
          "command": "just run backend",
          "terminalName": "Backend",
          "shortcut": "b"
        },
        {
          "name": "Frontend",
          "command": "just run frontend",
          "terminalName": "Frontend",
          "shortcut": "f"
        }
      ]
    },
    {
      "name": "$(cloud-download) Scraper",
      "color": "hotpink",
      "shortcut": "s",
      "group": [
        {
          "name": "Stat Scraper",
          "executeAll": true,
          "group": [
            {
              "name": "Market Item Stat Scraper",
              "command": "just run market-item-stat-scraper",
              "terminalName": "Market Item Stat Scraper"
            },
            {
              "name": "Auction Item Stat Scraper",
              "command": "just run auction-item-stat-scraper",
              "terminalName": "Auction Item Stat Scraper"
            }
          ],
          "shortcut": "q"
        },
        {
          "name": "Market Item Category Scraper",
          "command": "just run market-item-category-scraper",
          "terminalName": "Market Item Category Scraper",
          "shortcut": "w"
        },
        {
          "name": "Market Item Scraper",
          "command": "just run market-item-scraper",
          "terminalName": "Market Item Scraper",
          "shortcut": "e"
        },
        {
          "name": "Market Item Stat Scraper",
          "command": "just run market-item-stat-scraper",
          "terminalName": "Market Item Stat Scraper",
          "shortcut": "r"
        },
        {
          "name": "Auction Item Stat Scraper",
          "command": "just run auction-item-stat-scraper",
          "terminalName": "Auction Item Stat Scraper",
          "shortcut": "a"
        }
      ]
    },
    {
      "name": "$(tools) Utils",
      "shortcut": "u",
      "color": "purple",
      "group": [
        {
          "name": "Prisma Studio",
          "command": "just prisma studio",
          "terminalName": "Prisma Studio",
          "shortcut": "p"
        },
        {
          "name": "Codegen",
          "command": "just codegen",
          "terminalName": "Codegen",
          "shortcut": "c"
        },
        {
          "name": "Deps",
          "command": "just deps",
          "terminalName": "Deps",
          "shortcut": "d"
        },
        {
          "name": "Lint",
          "command": "just lint",
          "terminalName": "Lint",
          "shortcut": "l"
        }
      ]
    },
    {
      "name": "$(rocket) Release",
      "color": "orange",
      "shortcut": "r",
      "command": "just release",
      "terminalName": "Release"
    },
    {
      "name": "$(beaker) Test",
      "color": "tomato",
      "command": "just test",
      "terminalName": "Test",
      "shortcut": "t"
    },
    {
      "name": "$(hubot) Claude",
      "color": "blue",
      "shortcut": "c",
      "command": "export IS_SANDBOX=1 && claude --dangerously-skip-permissions",
      "terminalName": "Claude Yolo",
      "useVsCodeApi": false
    }
  ],
  "quickCommandButtons.refreshButton": {
    "icon": "$(refresh)",
    "color": "gray",
    "enabled": true
  }
}
