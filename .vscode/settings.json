{
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.renderWhitespace": "boundary",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.folding": true,
  "editor.foldingStrategy": "auto",
  "editor.foldingImportsByDefault": true,
  "files.insertFinalNewline": true,
  "files.autoSave": "onFocusChange",
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "quickCommandButtons.buttons": [
    {
      "name": "Web App",
      "color": "skyblue",
      "shortcut": "w",
      "group": [
        {
          "name": "Run App",
          "executeAll": true,
          "group": [
            {
              "name": "Backend",
              "command": "just run backend",
              "terminalName": "Backend"
            },
            {
              "name": "Frontend",
              "command": "just run frontend",
              "terminalName": "Frontend"
            }
          ],
          "shortcut": "q"
        },
        {
          "name": "Backend",
          "command": "just run backend",
          "terminalName": "Backend",
          "shortcut": "b"
        },
        {
          "name": "Frontend",
          "command": "just run frontend",
          "terminalName": "Frontend",
          "shortcut": "f"
        }
      ]
    },
    {
      "name": "Scraper",
      "color": "hotpink",
      "shortcut": "s",
      "group": [
        {
          "name": "Stat Scraper",
          "executeAll": true,
          "group": [
            {
              "name": "Market Item Stat Scraper",
              "command": "just run market-item-stat-scraper",
              "terminalName": "Market Item Stat Scraper"
            },
            {
              "name": "Auction Item Stat Scraper",
              "command": "just run auction-item-stat-scraper",
              "terminalName": "Auction Item Stat Scraper"
            }
          ],
          "shortcut": "q"
        },
        {
          "name": "Market Item Category Scraper",
          "command": "just run market-item-category-scraper",
          "terminalName": "Market Item Category Scraper",
          "shortcut": "w"
        },
        {
          "name": "Market Item Scraper",
          "command": "just run market-item-scraper",
          "terminalName": "Market Item Scraper",
          "shortcut": "e"
        },
        {
          "name": "Market Item Stat Scraper",
          "command": "just run market-item-stat-scraper",
          "terminalName": "Market Item Stat Scraper",
          "shortcut": "r"
        },
        {
          "name": "Auction Item Stat Scraper",
          "command": "just run auction-item-stat-scraper",
          "terminalName": "Auction Item Stat Scraper",
          "shortcut": "a"
        }
      ]
    },
    {
      "name": "$(git-branch) Git",
      "shortcut": "g",
      "color": "green",
      "group": [
        {
          "name": "Push",
          "command": "git add . && git commit --amend --no-edit && git push -f",
          "terminalName": "Forced Push",
          "shortcut": "p"
        },
        {
          "name": "Commit",
          "command": "git add . && git commit --amend --no-edit",
          "shortcut": "c"
        },
        {
          "name": "Reset Soft",
          "command": "git reset --soft HEAD~1",
          "shortcut": "r"
        },
        {
          "name": "Rebase 5",
          "command": "git rebase -i HEAD~5",
          "shortcut": "b"
        },
        {
          "name": "Checkout main",
          "command": "git checkout main",
          "shortcut": "m"
        }
      ]
    },
    {
      "name": "Utils",
      "shortcut": "u",
      "color": "purple",
      "group": [
        {
          "name": "Prisma Studio",
          "command": "just prisma studio",
          "terminalName": "Prisma Studio",
          "shortcut": "p"
        },
        {
          "name": "Codegen",
          "command": "just codegen",
          "terminalName": "Codegen",
          "shortcut": "c"
        }
      ]
    },
    {
      "name": "Claude",
      "color": "blue",
      "shortcut": "c",
      "command": "export IS_SANDBOX=1 && claude --dangerously-skip-permissions",
      "useVsCodeApi": false
    },
    {
      "name": "Release",
      "color": "orange",
      "shortcut": "r",
      "command": "just release",
      "terminalName": "Release"
    }
  ],
  "quickCommandButtons.refreshButton": {
    "icon": "$(refresh)",
    "color": "gray",
    "enabled": true
  }
}
