{
  "name": "loa-work",
  "dockerComposeFile": "docker-compose.yml",
  "initializeCommand": "touch ${HOME}/.env.secrets",
  "service": "workspace",
  "workspaceFolder": "/workspaces/loa-work",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/guiyomh/features/just:0": {},
    "./local-features/go": {},
    "./local-features/node": {},
    "./local-features/doppler": {}
  },
  "postCreateCommand": "bash /workspaces/loa-work/.devcontainer/post-create.sh",
  "customizations": {
    "vscode": {
      "extensions": ["esbenp.prettier-vscode", "skellock.just"],
      "settings": {
        "prettier.resolveGlobalModules": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      }
    }
  },
  "remoteUser": "root"
}
